# Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# API Keys (Optional - demo data will be used if not provided)
ADZUNA_APP_ID=your_adzuna_app_id_here
ADZUNA_API_KEY=your_adzuna_api_key_here

# Google Services (Optional)
GOOGLE_ADSENSE_ID=your_google_adsense_id_here
YOUTUBE_API_KEY=your_youtube_api_key_here

# Database (Optional)
DATABASE_URL=mongodb://localhost:27017/futurelinked_za

# Cache Configuration
CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Scraping Configuration
SCRAPING_ENABLED=true
SCRAPING_DELAY=1000
SCRAPER_TIMEOUT_MS=12000

# Job Freshness Configuration
# How old can jobs be (in days) before they're filtered out
ADZUNA_MAX_DAYS_OLD=7
# Sort jobs by date (newest first) or relevance
ADZUNA_SORT_BY=date

# Web Scrapers (disabled by default - Adzuna API is primary source)
# Set to 'true' only if you want supplementary results from web scraping
ENABLE_CAREER24=false
ENABLE_INDEED=false
ENABLE_GOOGLE_JOBS=false
ENABLE_SA_COMPANIES=false
ENABLE_BURSARIES=false
ENABLE_GRADUATE_PROGRAMS=false

# Contact (SMTP) - Optional
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Security
JWT_SECRET=your_jwt_secret_here_for_admin_features
ADMIN_PASSWORD=your_admin_password_here